<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.EditText" parent="Theme.AppCompat.Light.NoActionBar" >

        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>

    </style>

    <style name="AppTheme.Button.Primary" parent="Theme.AppCompat.Light.NoActionBar" >

        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>

    </style>

    <style name="edittextTheme">
        <item name="android:background">@drawable/round_edittext</item>
    </style>

    <style name="buttonPrimaryTheme">
        <item name="android:textColor">@color/colorTextButtonPrimary</item>
        <item name="colorButtonNormal">@color/colorButtonPrimary</item>
        <item name="colorControlHighlight">@color/colorTextButtonPrimaryPress</item>
        <item name="android:padding">@dimen/paddingButton</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="colorPrimary">#F44336</item>
        <item name="android:textColorSecondary">#2196F3</item>
    </style>

</resources>
